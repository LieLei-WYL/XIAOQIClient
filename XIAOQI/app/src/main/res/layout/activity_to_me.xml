<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".me.ToMeActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_to_me_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_to_me_circle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/pikaqiu"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_to_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户19003"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/iv_to_me_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/man"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_to_meintro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textColor="@color/black"
            android:layout_marginLeft="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/tome_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tome_attention_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tome_chasers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:id="@+id/tome_chasers_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tome_praised"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">
                <TextView
                    android:id="@+id/tome_praised_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获赞与收藏"
                    android:textStyle="bold"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_follow"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="关注"
                android:background="@drawable/button_shape"/>
        </LinearLayout>
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </GridView>
</LinearLayout>