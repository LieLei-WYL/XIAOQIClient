<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageButton
            android:id="@+id/fanhui"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textSize="36dp"
            android:textColor="#000000"
            android:background="@drawable/fanhui"
            android:layout_margin="10dp"/>
        <ScrollView
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1200dp"
                    android:src="@drawable/gscbj"
                    android:scaleType="fitXY"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/relativelayout_shape">
                        <ImageView
                            android:id="@+id/Iv"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/mb"/>
                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="50dp"
                            android:text="宋词"
                            android:textSize="16dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_type"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:text="摸鱼儿·更能消几番风雨"
                            android:textSize="20dp"
                            android:textColor="#000000"/>
                        <RelativeLayout
                            android:id="@+id/rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_below="@+id/tv_name">
                            <TextView
                                android:id="@+id/tv_dynasty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="宋"
                                android:textSize="16dp"
                                android:textColor="#000000"/>
                            <TextView
                                android:id="@+id/kongbai"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv_dynasty"/>
                            <TextView
                                android:id="@+id/tv_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/kongbai"
                                android:text="辛弃疾"
                                android:textSize="16dp"
                                android:textColor="#000000"/>
                        </RelativeLayout>

                        <com.example.xiaoqi.poetry.CenterTextView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl"
                            android:lineHeight="30dp"
                            android:text="淳熙己亥，自湖北漕移湖南，\n同官王正之置酒小山亭，为赋。\n更能消、几番风雨，匆匆春又归去。\n惜春长怕花开早，何况落红无数。\n春且住，见说道、天涯芳草无归路。\n怨春不语。\n算只有殷勤，画檐蛛网，尽日惹飞絮。\n长门事，准拟佳期又误。\n蛾眉曾有人妒。\n千金纵买相如赋，脉脉此情谁诉？\n君莫舞，君不见、玉环飞燕皆尘土！\n闲愁最苦！\n休去倚危栏，斜阳正在，烟柳断肠处。"
                            android:textSize="18dp"
                            android:textColor="#000000"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/tv_content"
                            android:text=" - 与肝胆人共事，无字句处读书 - "
                            android:textColor="#666"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@drawable/preground"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:id="@+id/pre"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:gravity="center_horizontal">
        <ImageView
            android:background="@drawable/pre"
            android:layout_width="65dp"
            android:layout_height="30dp" />
        <com.example.xiaoqi.poetry.StrokeTextView2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一首"
            android:textSize="18sp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/next"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal">
        <ImageView
            android:background="@drawable/next"
            android:layout_width="65dp"
            android:layout_height="30dp" />
        <com.example.xiaoqi.poetry.StrokeTextView2
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一首"
            android:textSize="18sp"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>