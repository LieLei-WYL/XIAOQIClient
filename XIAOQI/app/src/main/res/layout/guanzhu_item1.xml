<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
        android:id="@+id/tu1"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar"
        app:shape_mode="circle"/>
    <TextView
        android:id="@+id/tit1"
        android:text="XIAOQI"
        android:textSize="16dp"
        app:layout_marginTopPercent="2%"
        app:layout_marginLeftPercent="4%"
        android:layout_toRightOf="@id/tu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/tit2"
        android:textSize="14dp"
        android:layout_toRightOf="@id/tu1"
        android:layout_below="@id/tit1"
        app:layout_marginTopPercent="1%"
        android:text="赞了你的动态"
        app:layout_marginLeftPercent="4%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:textSize="14dp"
        android:id="@+id/tit3"
        android:layout_toRightOf="@id/tu1"
        android:layout_below="@id/tit2"
        app:layout_marginTopPercent="1%"
        android:text="11-18 16:18"
        app:layout_marginLeftPercent="4%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <Button
        android:text="回关"
        android:background="#DC143C"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="4.5%"
        app:layout_marginTopPercent="4.5%"
        app:layout_marginRightPercent="4.5%"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
</androidx.percentlayout.widget.PercentRelativeLayout>