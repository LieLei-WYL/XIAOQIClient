<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/xiangqing"
        android:layout_centerInParent="true"
        android:layout_width="390dp"
        android:layout_height="95dp">
        <ImageView
            android:id="@+id/gsc_image"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"></ImageView>
        <TextView
            android:id="@+id/gsc_type"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="16dp"
            android:textColor="#000000"></TextView>
        <TextView
            android:id="@+id/gsc_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="#000000"></TextView>
        <TextView
            android:id="@+id/kongbai1"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/gsc_name"></TextView>
        <TextView
            android:id="@+id/gsc_dynasty"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/kongbai1"
            android:textSize="16dp"
            android:textColor="#000000"></TextView>
        <TextView
            android:id="@+id/kongbai2"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/gsc_dynasty"></TextView>
        <TextView
            android:id="@+id/gsc_author"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/kongbai2"
            android:textSize="18dp"
            android:textColor="#000000"></TextView>
        <TextView
            android:id="@+id/gsc_content"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000000"></TextView>

    </RelativeLayout>
</RelativeLayout>
