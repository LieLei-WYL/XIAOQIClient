<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        android:id="@+id/fanhui"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="36dp"
        android:textColor="#000000"
        android:background="@drawable/fanhui"></ImageButton>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gscbj3">
        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="630dp"
            android:layout_centerInParent="true"
            android:background="#8fffffff"
            >
            <ImageView
                android:id="@+id/Iv"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:textColor="#000000"></TextView>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:textSize="24dp"
                android:textColor="#000000"></TextView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp">
                <TextView
                    android:id="@+id/tv_dynasty"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:textColor="#000000"></TextView>
                <TextView
                    android:id="@+id/kongbai"
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/tv_dynasty"></TextView>
                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/kongbai"
                    android:textSize="16dp"
                    android:textColor="#000000"></TextView>
            </RelativeLayout>

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_content"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:textSize="18dp"
                android:textColor="#000000"></TextView>
            <ImageView
                android:background="@drawable/shang"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="20dp" />
            <ImageView
                android:background="@drawable/xia"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="320dp" />
            <Button
                android:id="@+id/shang"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="590dp"
                android:background="#0fffffff"
                android:textColor="#000000"
                android:text="上一首"></Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="590dp"
                android:layout_centerHorizontal="true"
                android:text="生前何须小睡，死后自会长眠。"
                android:textColor="#000000"></TextView>
            <Button
                android:id="@+id/xia"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="590dp"
                android:layout_marginLeft="295dp"
                android:background="#0fffffff"
                android:textColor="#000000"
                android:text="下一首"></Button>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>