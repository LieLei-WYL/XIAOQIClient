<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.xiaoqi.news.ZQImageViewRoundOval
        android:id="@+id/iv_att"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/att_name"
        android:textSize="16dp"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="4%"
        android:layout_toRightOf="@id/iv_att"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/attented"
        android:layout_alignParentRight="true"
        app:layout_widthPercent="30%"
        app:layout_heightPercent="11%"
        app:layout_marginTopPercent="1.5%"
        android:src="@mipmap/attented"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.percentlayout.widget.PercentRelativeLayout>