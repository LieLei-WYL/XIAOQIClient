<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.SearchActivity"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_search_result_back"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/back" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/linearlayout_shape"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search_gray"/>
            <EditText
                android:id="@+id/edt_search_result_write"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:paddingLeft="5dp"
                android:background="#eee"
                android:textSize="14sp"
                android:textColor="#888"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search_result_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="15sp"
            android:textColor="#999"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索结果有"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#444"/>
                <TextView
                    android:id="@+id/tv_search_result_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#444"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#444"/>
            </LinearLayout>
            <GridView
                android:id="@+id/gv_search_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="auto_fit"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>