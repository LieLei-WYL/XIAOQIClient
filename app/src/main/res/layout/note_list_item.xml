<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_list_entirety"
    android:layout_width="200dp"
    android:layout_height="320dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_list_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/fanxian"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ms_img_bg"/>
    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="插画分享 | 风雪待归人 古风美人系列"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:paddingTop="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/gif_list_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/tv_list_title" >
        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/iv_list_avatar"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/avatar"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            app:shape_mode="circle"/>
        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="涂鸦王国"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"/>
    </LinearLayout>
</RelativeLayout>